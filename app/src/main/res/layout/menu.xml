<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mirageDark"
    android:visibility="visible"
    android:alpha="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <TextView
        android:id="@+id/tvShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:drawablePadding="12dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/share"
        android:textColor="@color/newWhite"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_share" />

    <TextView
        android:id="@+id/tvImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvShare"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:drawablePadding="12dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/add_an_image"
        android:textColor="@color/newWhite"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_pic" />

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvImage"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:drawablePadding="12dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/delete"
        android:textColor="@color/newWhite"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_delete" />


</RelativeLayout>